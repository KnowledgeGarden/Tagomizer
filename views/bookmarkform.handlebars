<h1>{{formtitle}}</h1>
<hr>
<div class="blog-post col-xs-9">
    <form method="post" action="/bookmark"  role="form" class="form-horizontal">
        <input type="hidden" name="locator" value="{{locator}}">
        <input type="hidden" name="url" value="{{url}}">
        <p class="blog-post-meta">
        </p>
        <div class="form-group">
            <img src="/images/bookmark.png"> <label>Bookmark</label>
            <h4>URL: {{url}}</h4>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
                <input id="title" type="text" name="title" value="{{title}}" placeholder="Enter the title" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <!-- TODO tag stuff goes here -->
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Save</button>&nbsp;
                <a href="/" title="cancel" class="btn">Cancel</a>
            </div>
        </div>
    </form>
</div>